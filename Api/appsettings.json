{
  "Logging": {
    "LogLevel": {
      "Default": "Information",
      "Microsoft.AspNetCore": "Warning"
    }
  },
  "AllowedHosts": "*",

  "Storage": {
    "ReceiptsContainer": "receipts",
    "OverwriteOnUpload": true
  },
  "Upload": {
    "RootFolder": "uploads",
    "PublicRequestPath": "/uploads",
    "MaxBytes": 10485760,
    "AllowedContentTypes": [
      "image/jpeg",
      "image/png",
      "image/webp",
      "application/pdf"
    ],
    "AllowedExtensions": [".jpg", ".jpeg", ".png", ".webp", ".pdf"]
  },
  "Cors": {
    "Origins": ["http://localhost:3000"]
  }
}
